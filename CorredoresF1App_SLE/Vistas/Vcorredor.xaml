<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CorredoresF1App_SLE.Vistas.Vcorredor">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Inventario" HorizontalOptions="Center" TextColor="White"/>
            </Frame>
            <Label Text="Registrar inventario" FontSize="Title" Padding="30,10,30,10"/>
            <Entry Placeholder="Nombre producto " Text="{Binding Name}"/>
            <Entry Placeholder="Cantidad" Text="{Binding Number}"/>
            <Entry Placeholder="Categoria" Text="{Binding Team}"/>
            <Button Text="Registra" Command="{Binding InsertarCorredorCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>